<!DOCTYPE html>
<html>

<head>
    <title>
        myProfile
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/static/style/myProfile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">


</head>

<body>
    <div class="container">
        <div id="inline">
            <div class="image">
                <img src="https://st3.depositphotos.com/6672868/13701/v/450/depositphotos_137014128-stock-illustration-user-profile-icon.jpg" alt="Stephen">
            </div>
            <div class="text">
                <div id="stats">
                    <div>
                        <p>Followers</p>
                        <p><%= profile.followers %></p>
                    </div>
                    <div>
                        <p>Following</p>
                        <p><%= profile.following %></p>
                    </div>
                </div>

                <button class="edit">
                    <span class="msg-edit">Edit</span>
                </button>
            </div>
        </div>
        <h1><%= profile.username %></h1>
        <p class="title"><%= profile.bio %></p>
        <div class="widget-post" aria-labelledby="post-header-title">
            <form id="widget-form" class="widget-post__form" name="form" aria-label="post widget" action="/post/" method="post">
                <div class="widget-post__content">
                    <textarea required name="content" class="widget-post__textarea "
                        placeholder="What's in your mind?"></textarea>
                </div>
                <div class="post-actions__widget">
                    <button type="submit" class="post-actions__publish">Post</button>
                </div>
            </form>
        </div>

        <% posts.forEach(function(post) { %>
            <div class="users-post">
                <div class="container1">
                    <button class="profile">
                        <img src="https://st3.depositphotos.com/6672868/13701/v/450/depositphotos_137014128-stock-illustration-user-profile-icon.jpg"
                            class="profile-img">
                    </button>
                    <div class="user-text">
                        <h1><%= profile.username %></h1>
                        <h2><%= post.postedOn.toLocaleString() %></h2>
                    </div>
                </div>
                <br>
                <p class="post-content" rows="15"><%= post.content %></p>
                <div class="reactions">
                    <button class="action"><i class="fa-solid fa-heart"></i> love</button>
                    <button class="action"><i class="fa-sharp fa-solid fa-comments"></i> comment</button>
                </div>
                <div class="comment-list">
                    <% post.comments.forEach(function(comment) { %>
                        <div class="comment">
                            <a href="/user/<%= comment.userid %>" class="comment-img">
                                <img src="https://st3.depositphotos.com/6672868/13701/v/450/depositphotos_137014128-stock-illustration-user-profile-icon.jpg"
                                    class="profile-img">
                            </a>
                            <div class="comment-content">
                                <h1>Comment By <%= comment.author.username %> â€¢ <%= comment.postedOn.toLocaleString() %></h1>
                                <p><%= comment.content %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>
                <div class="comment-box">
                    <a href="/user/<%= profile.userid %>" class="profile">
                        <img src="https://st3.depositphotos.com/6672868/13701/v/450/depositphotos_137014128-stock-illustration-user-profile-icon.jpg"
                            class="profile-img">
                    </a>
                    <div class="user-comment">
                        <h1><%= profile.username %></h1>
                        <div class="post-comment">
                            <form class="flex-comment-area">
                                <input type="text" placeholder="Write a comment" name="comment-input" class="comment-input">
                                <button type="submit" class="post-the-comment"><i class="fa-solid fa-paper-plane"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</body>

</html>